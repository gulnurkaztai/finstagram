<!doctype html>
<html>
  <head>
    <link rel="stylesheet" type="text/css" href="/stylesheets/normalize.css">
    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Roboto+Condensed:300italic,700italic,700,300">
    <link rel="stylesheet" type="text/css" href="/stylesheets/lib.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/app.css">
    <title>Blueberry</title>
  </head>
  <body>
  <nav class="navbar">
  
    <h1><a href="/">Blueberry</a></h1>
      <div class="login-info">
        <% if current_user %>
          <%= current_user.username %>
          <ul class="navbar-nav-right">
           <li><button class="btn btn-dark"><a href="/logout">Logout</a></button></li>
          </ul>
        <% else %>
        <ul class="navbar-nav-right">
         <li><button class="btn btn-light-outline"><a href="/login">Login</a></button></li>
         <li><button class="btn btn-dark"><a href="/signup">Signup</a></button></li>
        </ul>
        <% end %>
  </nav>
    <main role="main">
      <%= yield %>
    </main>
  </body>
</html>